<div style="padding-bottom:120px;"></div>
<div class="card col-6 mx-auto", style="padding: 10px; margin-top: 50px; border-radius:5%;">
  <div style="text-align:center;">

    <h2>Réservation</h2>
  </div>
  <%= simple_form_for [@offer, @booking] do |f| %>
  <%#= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
  <%#= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
    <div style="text-align:left;">
    <%= f.input :answer1, label:"#{@offer.question1}" %>
    <%= f.input :answer2, label:"#{@offer.question2}"%>
    <%= f.input :answer3, label:"#{@offer.question3}"%>
    </div>
      <div style="text-align:center;">
        <div class="form-actions">
          <%= f.button :submit,"Réserver", class:"btn btn-outline-primary" %>
              <br><br>
        </div>
      </div>
    <%end%>
   </div>
</div>
