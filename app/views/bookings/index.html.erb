<div class="container">
  <div class="btn-group d-flex justify-content-center " role="group" aria-label="Basic example">
    <button type="button" class="btn btn-outline-primary">Candidatures</button>
    <button type="button" class="btn btn-outline-primary">Validées</button>
    <button type="button" class="btn btn-outline-primary">Archivées</button>
  </div>




  <div class="mt-3">
    <%= form_tag bookings_path, method: :get do %>
      <div class="d-flex justify-content-center">
        <div>
        <%= text_field_tag :status,
          params[:status],
          class: "form-control",
          placeholder: "status"
        %>
        </div>
        <div>

            <%= text_field_tag :name,
          params[:name],
          class: "form-control",
          placeholder: "name"
        %>
        </div>

      <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

  <br>
  <br>


<% @bookings.each do |booking| %>


  <div class="card-product justify-content-left">
    <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
    <div class="card-product-infos">
      <h2>Name of the Office: <%= booking.offer.name %></h2>
      <h2>Name of the Booker: <%= booking.user.name %></h2>
      <p>Matching Rate :<strong> <%= booking.offer.matching_rate.class %></strong></p>

    </div>
  </div>
  <br>
  <% end %>
</div>



<div class="panel-group">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" href="#collapse1">Collapsible panel</a>
      </h4>
    </div>
    <div id="collapse1" class="panel-collapse collapse">
      <div class="panel-body">Panel Body</div>
      <div class="panel-footer">Panel Footer</div>
    </div>
  </div>
</div>
