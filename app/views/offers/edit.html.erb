<h2 style="margin:25px;"><strong>Editing:   </strong><%= @offer.name %></h2>
<div class="card col-6 mx-auto", style="padding: 10px; margin-top: 50px; border-radius:8%;">
  <div style="text-align:center;">
 <%= simple_form_for @offer, url: offer_path(@offer), method: :put do |f| %>
    
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :price %>
      <%= f.input :address %>
      <%= f.input :seats %>
      <%= f.input :room %>
      <%= f.button :submit, class:"btn btn-outline-primary" %>
  <% end %>
    </div>
    </div>
    </div>



