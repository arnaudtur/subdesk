<div style="padding-bottom:90px;">
<h2 style="margin:25px;"><strong>Modification de </strong><%= @offer.name %></h2>

<div class="card col-6 mx-auto", style="padding: 10px; margin-top: 50px; border-radius:8%;">
  <div style="text-align:center;">
 <%= simple_form_for @offer, url: offer_path(@offer), method: :put do |f| %>

    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.input :address %>
      <%= f.input :seats %>
      <%= f.input :room %>
      <%= f.input :photos, as: :file, input_html: { multiple: true } %>
      <%= f.input :question1  %>
      <%= f.input :question2  %>
      <%= f.input :question3  %>
      <%= f.button :submit, class:"btn btn-outline-primary" %>
  <% end %>
    </div>
    </div>
    </div>
