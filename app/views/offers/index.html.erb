<div class="container justify-content-center mt-3">
<%= form_tag offers_path, method: :get do %>
  <div class="d-flex">
    <div>
    <%= text_field_tag :address,
      params[:address],
      class: "form-control",
      placeholder: "city"
    %>
    </div>
    <div>

        <%= text_field_tag :price,
      params[:price],
      class: "form-control",
      placeholder: "price"
    %>
    </div>
    <div>

        <%= text_field_tag :seats,
      params[:seats],
      class: "form-control",
      placeholder: "seats"
    %>
    </div>
    <div>

        <%= text_field_tag :rooms,
      params[:rooms],
      class: "form-control",
      placeholder: "rooms"
    %>
    </div>
  <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
</div>
</div>
  <ul>
  <div class="d-flex">
  <%@offers.each do |offer|%>
    <div class="card-product" style="width: 18rem; border-radius:8px; margin:10px; padding:10px; height:12rem;">
      <div class="d-inline">
        <p><strong>address:</strong><%= offer.address%></p>
        <p><strong>name:</strong><%= offer.name%></p>
        <p><strong>seats:</strong><%= offer.seats%></p>
        <p><strong>rooms:</strong><%= offer.room%></p>
        <p><strong>Matching Rate:</strong><%= offer.matching_r(@user_logged) %></p>
        <%= link_to 'Check offer', offer_path(offer.id), class:"btn btn-outline-primary" %>
      </div>
    </div>
  <%end%>
  </ul>
</div>

<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
