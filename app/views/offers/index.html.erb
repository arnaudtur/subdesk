<div class="header" style="height: 170px;">
  <div class="container1">
    <h1 class="p-5" style="text-align: center ">Find your office</h1>
    <%= form_tag offers_path, method: :get do %>
      <div class="d-flex justify-content-center">
        <div>
        <%= text_field_tag :address,
          params[:address],
          class: "form-control",
          placeholder: "city",
          style:"border-top-left-radius: 30px; border-bottom-left-radius: 30px;"
        %>
        </div>
        <div>

            <%= text_field_tag :price,
          params[:price],
          class: "form-control",
          placeholder: "price"
        %>
        </div>
        <div>

            <%= text_field_tag :seats,
          params[:seats],
          class: "form-control",
          placeholder: "seats"
        %>
        </div>
        <div>

            <%= text_field_tag :rooms,
          params[:rooms],
          class: "form-control",
          placeholder: "rooms"
        %>
        </div>
      <%= submit_tag "Search", class: "btn btn-primary pl-5 pr-5", style:"border-top-right-radius: 30px; border-bottom-right-radius: 30px;" %>
      <% end %>
    </div>
  </div>
</div>
<div class="m-5" style="border-bottom: 1px solid black;">
  <h4 class="text-align pt-3 pl-5">
          <% cards_count = 0 %>
          <% @offers.each do |offer| %>
            <%cards_count += 1 %>
            <%end%>
           <%=  cards_count%> annonces pour votre recherche

  </h4>
</div>
<div class="d-flex w-80">
  <div class="container">
    <ul>
    <div class="container">
      <%@offers.each do |offer|%>
     <div class="m-3">
      <div class="cont_text_img d-flex justify-content-center">
        <div class="cont_text text-center">
          <h1><%= offer.name%></h1>
          <p><%= offer.address%></p>
          <p><%= offer.seats%> sièges</p>
          <p><%= offer.room%> pièces</p>
          <p> <%= offer.matching_r(@user_logged) %> de matchance</p>
          <%= link_to 'Check offer', offer_path(offer.id), class:"btn btn-outline-primary" %>
          <div class="cont_icon_like">
            <p><strong><%= offer.price%>€</strong></p>
          </div>
        </div>
        <div class="cont_img_frond img-thumbnail">
          <% @offers.each do |offer| %>
            <%= cl_image_tag offer.user.photo.key, class:"img-fluid" %>
          <% end %>
        </div>
      </div>
      </div>
      <%end%>
  </div>
  </ul>
  </div>
  <div class="container mr-5">
    <div id="map" class="map1"
         style="width: 100%; height: 600px;"
         data-markers="<%= @markers.to_json %>"
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>

