<div class="headerindex" style="height: 370px;">
  <div style="padding-bottom:150px;"></div>

  <div class="container1" style="position: relative; top 80%;">
    <h1 class="c10" style="text-align: center ">Trouvez vos <span class="c11">bureaux</span></h1>
    <%= form_tag offers_path, method: :get do %>
      <div class="d-flex justify-content-center">
        <div>
        <%= text_field_tag :address,
          params[:address],
          class: "form-control",
          placeholder: "Ville",
          style:"border:0px;border-radius:0px;height:35px;border-top-left-radius:8px;border-bottom-left-radius:8px;color:#fa26a0;font-weight:bold;text-align: center;"
        %>
        </div>
        <div>

            <%= text_field_tag :price,
          params[:price],
          class: "form-control",
          placeholder: "Prix",
          style: "border:0px; border-radius:0px;height:35px;font-weight:bold;text-align: center;"
        %>
        </div>
        <div>

            <%= text_field_tag :seats,
          params[:seats],
          class: "form-control",
          placeholder: "Sièges",
          style: "border:0px;border-radius:0px;height:35px;font-weight:bold;text-align: center;"
        %>
        </div>
        <div>

            <%= text_field_tag :rooms,
          params[:rooms],
          class: "form-control",
          placeholder: "Pièces",
          style: "border:0px;border-radius:0px;height:35px;font-weight:bold;text-align: center;"
        %>
        </div>
      <%= submit_tag "Rechercher", class: "btn btn-success pl-5 pr-5", style:"height:35px;border:0px;border-radius:0px; color:white; font-weight:bold;border-top-right-radius:8px;border-bottom-right-radius:8px;" %>
      <% end %>
    </div>
  </div>
</div>
<div class="m-5" style="border-bottom: 1px solid black;">
  <h4 class="text-align pt-3 pl-5">
          <% cards_count = 0 %>
          <% @offers.each do |offer| %>
            <% if offer.user ==  current_user %>
            <% else %>
            <%cards_count += 1 %>
            <%end%>
            <%end%>
           <strong><span style="color:#2AFEF1;"><%=cards_count%></span></strong> annonces pour votre recherche

  </h4>
</div>
<div class="d-flex w-80">
  <div class="container align-items-center justify-content-center d-flex row">

      <%@offers.each do |offer|%>
      <% if offer.user ==  current_user %>
      <% else %>
      <%= link_to offer_path(offer.id) do%>
      <div class="card promoting-card mb-5 ml-5 d-flex" style="width: 350px; border-radius: 10px;">


        <!-- Card image -->
        <div class="view overlay">
        <% offer.photos.each do |photo| %>
          <%= cl_image_tag photo.key, height: 230, width: 350, crop: "fill", class:"imagecard", style:"border-radius: 10px;"%>
        <p class="text-center badge badge-pil <%= matching_color(offer.matching_r(@user_logged)) %>"> Matching: <%= offer.matching_r(@user_logged) %>%</p>


        <%end%>
        </div>

        <!-- Card content -->
        <div class="card-body">

          <div class="collapse-content">

            <!-- Text -->
          <div class="d-flex justify-content-between">
            <h4 class="font-weight-bold mb-2"><%= offer.user.name%></h4>
            <p><i class="fas fa-male"></i> <%=offer.seats%></p>

          </div>
            <p><%=offer.address%></p>

             <!-- Button -->
            <div class="float-right">
                <span class="price">
                    <span class="currency"><%= offer.price%>€</span>
                    <span class="month">/MOIS</span>
                </span>

            </div>


          </div>

        </div>

      </div>
    <%end%>
    <%end%>
    <%end%>
  </div>
  <div id="map" class="map1 mr-5"
       style="width: 100%; height: 600px;"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
