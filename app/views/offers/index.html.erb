<div class="header" style="height: 170px;">
  <div class="container1">
    <h1 class="p-5" style="text-align: center ">Find your office</h1>
    <%= form_tag offers_path, method: :get do %>
      <div class="d-flex justify-content-center">
        <div>
        <%= text_field_tag :address,
          params[:address],
          class: "form-control",
          placeholder: "city",
          style:"border-top-left-radius: 30px; border-bottom-left-radius: 30px;"
        %>
        </div>
        <div>

            <%= text_field_tag :price,
          params[:price],
          class: "form-control",
          placeholder: "price"
        %>
        </div>
        <div>

            <%= text_field_tag :seats,
          params[:seats],
          class: "form-control",
          placeholder: "seats"
        %>
        </div>
        <div>

            <%= text_field_tag :rooms,
          params[:rooms],
          class: "form-control",
          placeholder: "rooms"
        %>
        </div>
      <%= submit_tag "Search", class: "btn btn-primary pl-5 pr-5", style:"border-top-right-radius: 30px; border-bottom-right-radius: 30px;" %>
      <% end %>
    </div>
  </div>
</div>
<div class="m-5" style="border-bottom: 1px solid black;">
  <h4 class="text-align pt-3 pl-5">
          <% cards_count = 0 %>
          <% @offers.each do |offer| %>
            <%cards_count += 1 %>
            <%end%>
           <%=  cards_count%> annonces pour votre recherche

  </h4>
</div>
<div class="d-flex w-80">
  <div class="container align-items-center justify-content-center d-flex flex-column">

      <%@offers.each do |offer|%>
      <% if offer.user ==  current_user %>
      <% else %>
      <%= link_to offer_path(offer.id) do%>
      <div class="card promoting-card mt-3" style="width: 481px; border-radius: 10px;">

        <!-- Card content -->
        <div class="card-body d-flex justify-content-between align-items-center">
            <%= cl_image_tag offer.user.photo.key, style:"height: 50px; width:50px;", class:"border-primary" %>
          <div>
            <!-- Title -->
            <h4 class="card-title font-weight-bold mb-2"><%= offer.name%></h4>
            <!-- Subtitle -->
          </div>
          <div>
            <p class="text-center badge badge-pil <%= matching_color(offer.matching_r(@user_logged)) %>"> Matching: <%= offer.matching_r(@user_logged) %>%</p>
          </div>

        </div>

        <!-- Card image -->
        <div class="view overlay">
        <% offer.photos.each do |photo| %>
          <%= cl_image_tag photo.key, height: 230, width: 481, crop: "fill", class:"imagecard"%>
        <%end%>
        </div>

        <!-- Card content -->
        <div class="card-body">

          <div class="collapse-content">

            <!-- Text -->
            <p><%=offer.user.name%> vous propose <%=offer.seats%> sièges dans <%= offer.room%> pièces au sein de leurs bureaux.</p>
             <!-- Button -->
            <p class="float-right p-1 my-1" style="font-weight: bold;"><%= offer.price%> €/ par poste</p>

          </div>

        </div>

      </div>
    <%end%>
    <%end%>
    <%end%>
  </div>
  <div class="container mt-3">
    <div class="container mr-5">
      <div id="map" class="map1"
           style="width: 100%; height: 600px;"
           data-markers="<%= @markers.to_json %>"
           data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
