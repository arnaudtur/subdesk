<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag("/assets/logo.png") %>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if !user_signed_in? %>
        <li class="nav-item">
          <div class="d-flex flex-row-reverse">
            <%= link_to "S'inscrire",  new_user_registration_path, class: "nav-link", style:"color:white;" %>
            <span style="width:30px;"></span>
            <%= link_to 'Connexion', user_session_path, class: "nav-link", style:"color:white;"  %>
          </div>
        </li>
      <% elsif user_signed_in? %>
        <li class="nav-item dropdown imgnav">
          <div class="d-flex flex-row-reverse">
            <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle m-2", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown" style="color:white;">
              <%= link_to 'Profil', user_path(current_user), class:"nav-link", style:"color:white;"%>

              <%= link_to 'Modifier mes informations',  edit_user_path(current_user), class:"nav-link", style:"color:white;" %>

              <%= link_to 'Paramètres',  edit_user_registration_path(current_user), class:"nav-link", style:"color:white;" %>

              <%= link_to "Déconnexion", destroy_user_session_path, method: :delete, class:"nav-link",style:"color:white;" %>
            </div>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Connexion", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
