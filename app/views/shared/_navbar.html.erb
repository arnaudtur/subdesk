<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
 <% if !user_signed_in? %>
           <li class="nav-item active">
              <div class="d-flex flex-row-reverse">
                <%= link_to 'Sign-in', user_session_path, class: "nav-link" %>
              </div>
            </li>
          <% elsif user_signed_in? %>
            <li class="nav-item active">
              <div class="d-flex flex-row-reverse">
                <%= link_to 'Profile', root_path, class:"nav-link" %>
              </div>
            </li>
            <li class="nav-item">
              <div class="d-flex flex-row-reverse">
                <%= link_to 'Browse offers', offers_path, class:"nav-link" %>
              </div>
            </li>
            <li class="nav-item">
              <div class="d-flex flex-row-reverse">
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class:"nav-link" %>
              </div>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Login", new_user_session_path, class: "nav-link" %>
            </li>
          <% end %>
      </li>
    </ul>
  </div>
</div>